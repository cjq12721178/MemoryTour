<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/chk_to_recite" />
    <TextView
        android:layout_width="@dimen/width_section_state"
        android:layout_height="wrap_content"
        android:id="@+id/tv_passage_state"
        android:gravity="center"
        android:text="@string/tv_section_state"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/chk_to_recite_section"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_passage_name"
        android:gravity="center"
        android:text="@string/passage"
        android:textSize="@dimen/size_text_view_label"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tv_passage_state"
        android:layout_centerVertical="true"/>
</RelativeLayout>